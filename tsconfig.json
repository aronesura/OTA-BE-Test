{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./build",
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
